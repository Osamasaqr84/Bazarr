<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_adsListView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleee"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/mess_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="60.0dip"
            android:layout_marginRight="7.0dip"
            android:layout_marginTop="5.0dip"
             android:gravity="right"
            android:layout_marginBottom="12dp"
             android:paddingBottom="2.0dip"
            android:text="Some long title"
            android:textColor="@color/gray"
            android:textSize="15sp"
             />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="13dp"
             android:src="@drawable/entre_to" />

            <TextView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:textColor="@color/white"
                android:background="@drawable/bluecircle"
                android:text="1"
                android:visibility="gone"
                android:id="@+id/isopen"
                android:gravity="center"
                />

    </RelativeLayout>





    <TextView
        android:id="@+id/time_mess"
        android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="12.0dip"
        android:gravity="right"
        android:layout_below="@+id/titleee"
        android:layout_marginTop="5.0dip"
         android:textColor="@color/gray"
        android:paddingRight="10.0dip"
        android:text="Small Text"
        android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/layout_cell_ads_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_mess"
             android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp"
             >




                <TextView
                    android:id="@+id/sender_mess"
                    android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                       android:textColor="#059de9"
                    android:gravity="right"
                    android:paddingLeft="8dp"
                       android:text="author name very long"
                    android:layout_marginLeft="15dp"
                    android:textSize="12sp" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="11dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/male"
                />

    </LinearLayout>
</RelativeLayout>