<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
     android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ScrollView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/aaa"

            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/beige"
                    android:id="@+id/addetail"
                    android:padding="15sp"
                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:text="@string/galaxy"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:textSize="20sp"
                        android:id="@+id/adtitle" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                             android:textColor="#595959"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:id="@+id/adnumber"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#595959"
                            android:gravity="right|center"
                            android:textSize="12sp"
                            android:paddingRight="10dp"
                            android:text="قبل 2 دقيقة"
                            android:id="@+id/adtime"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="2.5"
                            android:gravity="center"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="الدمام"
                                android:textColor="@color/colorPrimary"
                                android:gravity="center"
                                android:id="@+id/adCity"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/dss"
                                android:paddingLeft="5dp"
                                />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:gravity="right|center"
                            android:layout_weight="1"
                            android:drawableEnd="@drawable/dsss"
                            android:drawablePadding="5dp"
                            android:paddingRight="10dp"
                             android:text="ibrahim20001815616"
                            android:id="@+id/adUserName"
                            />

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textt"
                    android:padding="10sp"
                    android:id="@+id/adContent"
                    android:textColor="@color/black"
                   />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/AddImages"
                    class="android.support.v7.widget.RecyclerView"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:id="@+id/callLinear"
                    android:orientation="horizontal"
                    android:background="#fffde4"
                    android:gravity="right|center_vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="25dp"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="1651656516516"
                    android:gravity="center"
                    android:id="@+id/adUserMobile"
                    android:textColor="@color/colorPrimary"
                    />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@android:drawable/sym_action_call"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:id="@+id/messageLinear"
                    android:orientation="horizontal"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="25dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="مراسلة"
                         android:id="@+id/adEmail"
                        android:textColor="@color/colorPrimary"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_dialog_email"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:id="@+id/adEvaluation"
                    android:orientation="horizontal"
                    android:gravity="right|center_vertical"
                    android:background="#fffde4"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="25dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="تقييم"
                         android:textColor="@color/colorPrimary"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/likeicon"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                       >
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:background="@null"
                        android:id="@+id/adViolencebtn"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="25dp"
                         android:src="@drawable/flagicon"

                        />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/adFavbtn"
                        android:background="@null"
                         android:layout_marginLeft="25dp"
                         android:src="@drawable/hearticon"
                        />
                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/commentRecycler"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:id="@+id/commentLinear"
                    android:orientation="horizontal"
                    android:background="@drawable/comment_put"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"

                     >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@android:drawable/sym_action_chat"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="اكتب تعليقا"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/followLinear"
                    android:orientation="horizontal"
                    android:background="#fffde4"
                    android:layout_marginBottom="15dp"
                    android:gravity="left"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/hearticon"
                        android:id="@+id/followicon"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="متابعة الردود"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="اعلانات مشابهة"
                    android:gravity="right|center"
                    android:textColor="@color/black"
                    />


            </LinearLayout>
        </ScrollView>
        </RelativeLayout>


    </FrameLayout>
