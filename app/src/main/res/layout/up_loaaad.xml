<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:class="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/liner_2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/hj_color_blue"
        android:layoutDirection="ltr"

        android:gravity="right"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/bar_courses"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="اضافة اعلان"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/liner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="#f7fbfa"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/IvCamera"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="#f7fbfa"
                    android:gravity="center"
                    android:src="@drawable/small_camera"
                    android:text="التقاط صورة "
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>




            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photo_recycler"
                android:visibility="gone"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="#f7fbfa"
                android:gravity="center"
                android:layoutDirection="ltr"

                android:layout_marginRight="18dp"
                android:layout_marginLeft="18dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:paddingRight="12dp"
                    android:hint="@string/adtitle"
                    android:textColor="#000000"
                    android:textSize="18sp" />


            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="#f7fbfa"
                android:gravity="center"
                android:layout_marginRight="18dp"
                android:layoutDirection="ltr"

                android:layout_marginLeft="18dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:inputType="number"
                    android:hint="@string/admobile"
                    android:textColor="#000000"
                    android:paddingRight="12dp"
                    android:textSize="18sp" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#f7fbfa"
                android:gravity="center"
                android:layoutDirection="ltr"

                android:layout_marginRight="18dp"
                android:layout_marginLeft="18dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/typeclass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:minLines="5"
                    android:hint="@string/target"
                    android:textColor="#000000"
                    android:textSize="18sp" />


            </LinearLayout>





            <LinearLayout
                android:id="@+id/liner_2d"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="#f7fbfa"
                android:gravity="center"

                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivGallary"
                    android:layout_width="115dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/plus"

                    android:textColor="#000000"

                    android:textSize="20sp" />
            </LinearLayout>


            <!--<Button-->
            <!--android:id="@+id/etIpAddree"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:gravity="center"-->
            <!--android:text="نشر الاعلان"-->
            <!--android:textColor="#000000"-->

            <!--/>-->

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>