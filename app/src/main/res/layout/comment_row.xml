<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layoutDirection="ltr"

        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mess_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:gravity="right"
            android:text="Some long title"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/sender_mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mess_title"
             android:layout_alignParentRight="true"
            android:text="Small Text"
            android:textColor="#1a75ff"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/time_mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sender_mess"
            android:text="author name very long"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray"
            android:textSize="16sp" />


    </RelativeLayout>
</LinearLayout>